import Thread from `async`;
import random from `random`;

class Eater ->
	fun eat () ->
		print`$name eats.`;

class Pooper ->
	fun poop () ->
		print`$name poops.`;

class Sleeper ->
	fun sleep (int seconds) ->
		print`$name sleeps $seconds seconds.`;
		Thread.sleep(seconds);

class Animal (obj ...args) ->
	is Eater, Pooper, Sleeper;
	overt str name = args.name;
	overt int age = 0;
	overt var boo alive = true;

	fun die () ->
		alive = false;

	fun live (int max-age = 10) ->
		while alive
			if age > max-age
				die();
			eat();
			poop();
			sleep(10);
			age += 1;

Animal(name: `jeff`)
	.live(Random.int(10));